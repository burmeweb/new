{
  "name": "burmeweb",
  "version": "1.0.0",
  "description": "Social Platform for Myanmar",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/*.css --use autoprefixer -d dist/css/",
    "build:js": "uglifyjs assets/js/*.js -o dist/js/bundle.min.js",
    "watch:css": "postcss assets/css/*.css --use autoprefixer -d dist/css/ --watch",
    "lint": "eslint assets/js/**/*.js",
    "format": "prettier --write \"assets/**/*.{js,css,html}\"",
    "test": "jest",
    "deploy": "npm run build && firebase deploy",
    "preview": "serve dist",
    "clean": "rm -rf dist",
    "analyze": "webpack-bundle-analyzer dist/stats.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/burmeweb/burmeweb.github.io.git"
  },
  "keywords": [
    "social",
    "myanmar",
    "platform",
    "chat",
    "community"
  ],
  "author": "BurmeWeb Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/burmeweb/burmeweb.github.io/issues"
  },
  "homepage": "https://github.com/burmeweb/burmeweb.github.io#readme",
  "dependencies": {
    "firebase": "^9.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "jest": "^27.4.0",
    "live-server": "^1.2.1",
    "postcss": "^8.4.0",
    "postcss-cli": "^9.0.0",
    "prettier": "^2.5.0",
    "serve": "^13.0.0",
    "uglify-js": "^3.14.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "private": true,
  "config": {
    "port": 3000,
    "api_url": "https://api.burmeweb.com"
  }
}